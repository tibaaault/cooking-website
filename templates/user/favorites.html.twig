{% extends 'base.html.twig' %}

{% block title %}My Favourites
{% endblock %}

{% block body %}

	<div class="container">
		<div class="d-flex" style="height: 50px "></div>
		<div class="col-xl-10 col-sm mx-auto card py-4 shadow-lg rounded rounded-6">
			<h3 class="ps-4 text-center">My Favourites</h3>
		</div>
		<div class="d-flex" style="height: 50px "></div>
	</div>
	<div class="col-xl-10 col-sm bg-secondary rounded rounded-9 mx-auto">
		<div class="d-flex" style="height: 50px"></div>
		<div class="col-xl-9 col-sm mx-auto">
			<div class="row">
				{% if favorites is empty %}
					<div class="col-xl-10 col-sm mb-5 mx-auto">
						<div class="card shadow-lg col-xl mx-auto">
							<div class="card-body text-center">
								<h5 class="card-title">Aucun favori</h5>
							</div>
						</div>
					</div>
				{% endif %}
				{% for favorite in favorites %}
					<div class="col-xl-4 col-sm mb-5">
						<a href="{{ path('showRecette', {'id': favorite.getIdRecette.id }) }}" class="card-link">
							<div class="card shadow-lg col-xl mx-auto" style="height: 350px;">
								<div style="height: 250px;">
									<img src="/img/{{ favorite.getIdRecette.getImg() }}" class='img-fluid card-img-top mx-auto h-100 d-inline-block' alt="{{favorite.getIdRecette.name }}"/>
								</div>
								<div class="card-body">
									<h5 class="card-title">{{ favorite.getIdRecette.name }}</h5>

								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="d-flex" style="height: 200px "></div>
</div>{% endblock %}
