{% extends 'base.html.twig' %}

{% block title %}My Favourites
{% endblock %}

{% block body %}

	<div class="container">
		<div class="d-flex" style="height: 50px "></div>
		<div class="col-xl-10 col-sm mx-auto card py-4 shadow-lg rounded rounded-6">
			<h3 class="ps-4 text-center">My Recipes</h3>
		</div>
		<div class="d-flex" style="height: 50px "></div>
	</div>
	<div class="col-xl-8 col-sm bg-secondary rounded rounded-9 mx-auto">
		<div class="d-flex" style="height: 50px"></div>
		<div class="col-xl-10 col-sm mx-auto">
			<div class="row">
				{% if recipes is empty %}
					<div class="col-xl-10 col-sm mb-5 mx-auto">
						<div class="card shadow-lg col-xl mx-auto">
							<div class="card-body text-center">
								<h5 class="card-title">Aucune recette</h5>
							</div>
						</div>
					</div>
				{% endif %}
				{% for recipe in recipes %}
					<div class="col-xl-4 col-sm mb-5">
						<a href="{{ path('showRecette', {'id': recipe.id }) }}" class="card-link">
							<div class="card shadow-lg col-xl mx-auto" style="background-size : contain; ">
								<div style="height: 250px;">
									<img src="/img/{{ recipe.img }}" class='img-fluid card-img-top mx-auto h-100 d-inline-block' alt="{{ recipe.name }}" style="width:100%; height:auto;"/>
								</div>
								<div class="card-body">
									<h5 class="card-title">{{ recipe.name }}</h5>
								</div>
							</div>
						</a>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
	<div class="d-flex" style="height: 200px "></div>
</div>{% endblock %}
